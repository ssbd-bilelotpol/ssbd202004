#!/bin/bash -e
#
# S2I assemble script for the 'bilelotpol-build' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'bilelotpol-build' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts..."
  shopt -s dotglob
  mv /tmp/artifacts/* ./
  shopt -u dotglob
fi

echo "---> Building application from source..."
pushd /tmp/src/ >/dev/null
export JAVA_HOME=/usr/lib/jvm/java-11

mv src/main/resources/config.properties.example src/main/resources/config.properties
mv src/main/frontend/.env.example src/main/frontend/.env
mvn package

mv target/ssbd04-1.0.war /opt/app-root/bilelotpol.war
popd >/dev/null